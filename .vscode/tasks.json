{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "powershell.exe ./build.ps1 -VisualStudioVersion Vs2017 -Runtime Dynamic -Platform x64 -Config Debug",
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "${workspaceFolder}/build_Vs2017_x64_dynamic/test/lib/Debug/lib_tests.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "Build"
        }
    ]
}